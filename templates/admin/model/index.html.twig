{% extends 'base.html.twig' %}

{% block title %}Dashboard - Models{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="container mt-4 mb-5">
        <h1 class="mb-3 py-2 text-center bg-dark text-light bg-opacity-50  rounded-4 w-25 mx-auto">Models</h1>
        <div class="text-end mt-4 position-absolute top-0 end-0 me-4 pt-2">
            <a href="{{ path('admin.model.add') }}" class="btn btn-dark btn-add"><i class="bi bi-plus-lg"></i> Add Model</a>
        </div>
        <div class="table-responsive w-100 px-5 py-2 px-2 rounded-2 shadow">
            <table id="dataTable" class="table table-striped table-bordered my-3 shadow-sm w-100 rounded-3">
                <thead class="">
                    <tr>
                        <th>Name</th>
                        <th>Path</th>
                        <th>Roles</th>
                        <th>Order</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>


    </div>

    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                serverSide: true,
                ajax: '{{ path('admin.model.data') }}',
                columns: [
                    { data: 'name' },
                    { data: 'path' },
                    { data: 'roles'},
                    { data: 'modelOrder',className:'text-center' },
                    { data: 'action', className:'text-center' }
                ],
                order: [[0, 'asc']]
            });
        });
    </script>
{% endblock %}
