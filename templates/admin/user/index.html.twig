{% extends 'base.html.twig' %}

{% block title %}Dashboard - Users{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="container mt-4 mb-5">
        <h1 class="mb-3 py-2 text-center bg-dark text-light bg-opacity-50  rounded-4 w-25 mx-auto">Users</h1>
        <div class="text-end mt-4 position-absolute top-0 end-0 me-4 pt-2">
            <a href="{{ path('admin.user.add') }}" class="btn btn-dark btn-add"><i class="bi bi-plus-lg"></i> Add User</a>
        </div>
        <div class="table-responsive w-100 px-5 py-2 px-2 rounded-2 shadow">
            <table id="dataTable" class="table table-striped table-bordered my-3 shadow-sm w-100 rounded-3">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Roles</th>
                    <th>Action</th>
                </tr>
                </thead>
            </table>
        </div>


    </div>

    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                serverSide: true,
                ajax: '{{ path('admin.user.data') }}',
                columns: [
                    { data: 'id', className:'text-center'},
                    { data: 'email' },
                    { data: 'username'},
                    { data: 'roles'},
                    { data: 'action', className:'text-center' }
                ],
                order: [[0, 'asc']]
            });
        });
    </script>
{% endblock %}
