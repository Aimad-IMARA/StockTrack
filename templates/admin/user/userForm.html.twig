{% extends 'base.html.twig' %}

{% block title %}Dashboard - {{ is_edit? 'User':'New User' }}{% endblock %}

{% block body %}
    <div class="container mt-4 mb-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <h2 class="mb-4 text-center">{{ is_edit ? 'Edit User' : 'Add User' }}</h2>
                <div class="card shadow-sm p-4">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.username, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.username) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.password, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'password'}}) }}
                        {{ form_errors(form.password) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.roles, null, {'label_attr': {'class': 'form-label font-weight-5'}}) }}
                        {{ form_widget(form.roles) }}
                        {{ form_errors(form.roles) }}
                    </div>
                    <div class="text-center">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success w-50'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
