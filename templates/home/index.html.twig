{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Home{% endblock %}

{% block body %}
    <div class="container-fluid">
    <div class="row">
        <!-- Sidebar with Categories -->
        <div class="col-md-3">
            <div class="sidebar">
                <h2>Categories</h2>
                <ul class="list-group">
                    {% for category in categories %}
                        <li class="list-group-item">
                            <a href="{{ path('user.category.show', { 'id': category.id }) }}">{{ category.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Main Content Area for Products -->
        <div class="col-md-9">
            <h1>Featured Products</h1>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="{{ product.imagePath }}" class="card-img-top" alt="{{ product.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text">{{ product.description }}</p>
                                <p class="card-text">Price: ${{ product.price }}</p>
                                <a href="{{ path('user.product.show', { 'id': product.id }) }}" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>{% endblock %}
