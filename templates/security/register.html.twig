{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center container-fluid">
        <div class="col-8 col-xl-4 col-lg-4 p-3 border rounded">
            <h1 class="h3 mb-3 font-weight-normal text-center">Registration !</h1>
            {{ form_errors(registrationForm, {'attr': {'class': 'w-100'}}) }}

            {{ form_start(registrationForm) }}
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'johndoe@gmail.com'}}) }}
                {{ form_errors(registrationForm.email, {'attr': {'class': 'alert alert-danger'}}) }}
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Password</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'password...'}}) }}
                {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'alert alert-danger'}}) }}
            </div>
            <div class="mb-3">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'alert alert-danger'}}) }}
            </div>

            <button type="submit" class="btn btn-dark btn-block">Register</button>
            {{ form_end(registrationForm) }}
        </div>

        <p class="mt-3">Already have an account? <a href="{{ path('login') }}">Sign in!</a></p>
    </div>
{% endblock %}
