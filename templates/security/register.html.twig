{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Sign up{% endblock %}

{% block body %}
    <div class="d-flex mt-5 flex-column align-items-center container-fluid">
        <div class="col-8 col-lg-4 col-xl-4 p-3 border rounded bg-white pb-5 pt-4 shadow px-5">
            <h1 class="h1 mb-4  font-weight-bold text-center">Sign up</h1>
            {{ form_errors(registrationForm, {'attr': {'class': 'w-75 mx-auto'}}) }}

            {{ form_start(registrationForm) }}
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'johndoe@gmail.com', 'id':'email'}}) }}
                {{ form_errors(registrationForm.email, {'attr': {'class': 'alert alert-danger'}}) }}
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'johndoe@gmail.com', 'id':'email'}}) }}
                {{ form_errors(registrationForm.username, {'attr': {'class': 'alert alert-danger'}}) }}
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Password</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'password...'}}) }}
                {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'alert alert-danger'}}) }}
            </div>
            <div class="mb-3">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'alert alert-danger'}}) }}
            </div>

            <button type="submit" class="btn btn-dark btn-block mt-4">Register</button>
            {{ form_end(registrationForm) }}
        </div>

        <p class="mt-3">Already have an account? <a href="{{ path('login') }}">Sign in!</a></p>
    </div>
{% endblock %}
